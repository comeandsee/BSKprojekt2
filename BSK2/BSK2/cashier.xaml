<Window x:Class="BSK2.cashier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BSK2"
        mc:Ignorable="d"
        Title="cashier" Height="450" Width="800">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="381" Margin="0,29,0,0" VerticalAlignment="Top" Width="769">
            <TabItem Header="Wypożycz" Margin="-2,-2,-2,0">
                <Grid Margin="0,0,0.4,-0.2">
                    <Grid Background="#FFE5E5E5" Margin="0,0,-23.2,-0.2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="91.2"/>
                            <ColumnDefinition Width="23*"/>
                            <ColumnDefinition Width="648*"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.ColumnSpan="3" Margin="6,7,568.6,51.8">
                            <TextBlock Margin="1,0,33,0" TextWrapping="Wrap" Text="ID WPOŻYCZENIA" VerticalAlignment="Top" RenderTransformOrigin="-0.155,-0.539"/>
                            <TextBlock Margin="1,25,-1,0" TextWrapping="Wrap" Text="Wybierz datę wypożyczenia" VerticalAlignment="Top"/>
                            <TextBlock Margin="0,46,0,0" TextWrapping="Wrap" Text="Wybierz datę zwrotu" VerticalAlignment="Top"/>
                            <TextBlock Margin="1,94,86,0" TextWrapping="Wrap" Text="Cena" VerticalAlignment="Top"/>
                            <TextBlock Margin="1,73,84,0" TextWrapping="Wrap" Text="Wybierz klienta" VerticalAlignment="Top"/>
                            <TextBlock Margin="0,157,88,0" TextWrapping="Wrap" Text="ID pracownika: " VerticalAlignment="Top"/>
                            <TextBlock Margin="1,178,18,0" TextWrapping="Wrap" Text="Wypożyczalnia" VerticalAlignment="Top"/>
                            <TextBlock Margin="1,136,33,0" TextWrapping="Wrap" Text="ID faktury" VerticalAlignment="Top" RenderTransformOrigin="-0.155,-0.539"/>
                            <TextBlock Margin="1,199,33,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.155,-0.539"><Run Text="Wpożyczone pozycje"/><Run Text=":"/></TextBlock>
                            <TextBlock Margin="0,115,87,0" TextWrapping="Wrap" Text="Rabat" VerticalAlignment="Top"/>
                        </Grid>
                        <Grid Grid.Column="2" Margin="59.6,10,360.2,137.6">
                            <Grid Margin="0,0,1.6,0.8">
                                <DatePicker  x:Name="dataRentCashier" HorizontalAlignment="Left" VerticalAlignment="Top" Width="111" Margin="0,23,0,0"/>
                                <DatePicker x:Name="dataReturnCashier" HorizontalAlignment="Left" VerticalAlignment="Top" Width="111" Margin="0,47,0,0"/>
                                <Button  x:Name="chooseClientCashierButton" Content="Wybierz " HorizontalAlignment="Left" VerticalAlignment="Top" Width="111" Margin="116,71,0,0" RenderTransformOrigin="0.38,2.875" />
                                <TextBox x:Name="PriceCashier" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="21.11 zł" VerticalAlignment="Top" Width="111" Margin="0,90,0,0"/>
                                <TextBox x:Name="discountCashier" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="00.00 zł" VerticalAlignment="Top" Width="111" Margin="0,113,0,0"/>
                                <TextBox x:Name="idFacture"  IsReadOnly="True" Background="DarkGray" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="#112" VerticalAlignment="Top" Width="111"  Margin="0,136,0,0"/>
                                <TextBox x:Name="idCashier"  IsReadOnly="True" Background="DarkGray" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="#2" VerticalAlignment="Top" Width="111" Margin="0,159,0,0"/>
                                <TextBox x:Name="nameRentalCashier"  IsReadOnly="True" Background="DarkGray" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="JustPlay&amp;Wrzeszcz" VerticalAlignment="Top" Width="111" Margin="0,182,0,0"/>
                                <TextBox x:Name="idRentCashier"  IsReadOnly="True" Background="DarkGray" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="#1100" VerticalAlignment="Top" Width="111"/>
                            </Grid>
                            <TextBox x:Name="userRentCashier" HorizontalAlignment="Left" Height="19" Margin="0,71,0,0" TextWrapping="Wrap" Text="Marta Kaplińska" VerticalAlignment="Top" Width="111"/>
                        </Grid>
                        <ListView Grid.Column="2" HorizontalAlignment="Left" Height="123" Margin="59.6,221,0,0" VerticalAlignment="Top" Width="408" >
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Nazwa" Width="100"  />
                                    <GridViewColumn Header="Cena/dzien" Width="100" />
                                    <GridViewColumn Header="Kategoria" Width="100"  />
                                    <GridViewColumn Header="Kaucja" Width="100"  />
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button x:Name="addGame" Content="Dodaj " HorizontalAlignment="Left" Margin="485.6,223,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.701,0.401" Grid.Column="2"/>
                        <Button x:Name="deleteGame" Content="Usuń " HorizontalAlignment="Left" Margin="485.6,247,0,0" VerticalAlignment="Top" Width="75" Grid.Column="2"/>
                        <Button x:Name="rentGam_button" Content="Wypożycz " Background="Red" Foreground="White" Grid.Column="2" HorizontalAlignment="Left" Margin="563.6,325,0,0" VerticalAlignment="Top" Width="75"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Zwrot" Margin="-2,-2,-2,0">
            </TabItem>

            <TabItem Header="Dodaj użytkownika" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5" Margin="-5,1,5.4,-1.2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Margin="10,33,475.6,125.8" RenderTransformOrigin="0.815,0.45">
                        <TextBlock Margin="0,73,34,0" TextWrapping="Wrap" Text="Nume telefonu" VerticalAlignment="Top" RenderTransformOrigin="-0.155,-0.539"/>
                        <TextBlock Margin="1,25,-1,0" TextWrapping="Wrap" Text="Imię" VerticalAlignment="Top"/>
                        <TextBlock Margin="0,46,0,0" TextWrapping="Wrap" Text="Nazwisko" VerticalAlignment="Top"/>
                        <TextBlock Margin="1,94,86,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top"/>
                        <TextBlock Margin="0,120,85.8,0" TextWrapping="Wrap" Text="Hasło" VerticalAlignment="Top"/>
                        <TextBlock Margin="0,142,88,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top"/>
                        <TextBlock Margin="0,163,19.8,-0.2" TextWrapping="Wrap" Text="Numer dowodu" VerticalAlignment="Top"/>

                    </Grid>
                    <Grid Margin="143,33,297.6,125.8">
                        <TextBox x:Name="nameCashier" HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,21,0,0"/>
                        <TextBox x:Name="surnameCashier" HorizontalAlignment="Left" Height="19" Margin="0,45,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
                        <TextBox x:Name="phoneNoCashier" HorizontalAlignment="Left" Height="19" Margin="0,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                        <TextBox x:Name="loginCashier" HorizontalAlignment="Left" Height="19" Margin="0,93,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
                        <TextBox x:Name="passwordCashier3" HorizontalAlignment="Left" Height="19" Margin="0,117,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
                        <TextBox x:Name="emailCashier" HorizontalAlignment="Left" Height="19" Margin="0,141,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
                        <TextBox x:Name="idCardCashier" HorizontalAlignment="Left" Height="19" Margin="0,165,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
                    </Grid>
                    <Button x:Name="buttonRegister" Content="Zarejestruj" HorizontalAlignment="Left" Margin="191,274,0,0" VerticalAlignment="Top" Width="75" />
                </Grid>
            </TabItem>

        </TabControl>

        <Button Content="Wyloguj" HorizontalAlignment="Left" Margin="694,10,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
