                    </Grid>
                    <Grid Margin="102,33,297.4,126.8" Grid.Column="1">
                        <TextBox x:Name="nameCashier" HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,21,0,0"/>
