                            <TextBox x:Name="nameRentalCashier"  IsReadOnly="True" Background="#d3d3d3" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="JustPlay&amp;Wrzeszcz" VerticalAlignment="Top" Width="111" Margin="0,182,0,0"/>
                            <TextBox x:Name="idRentCashier"  IsReadOnly="True" Background="#d3d3d3" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="#1100" VerticalAlignment="Top" Width="111"/>
                            <ComboBox HorizontalAlignment="Left" Margin="0,205,0,-0.2" VerticalAlignment="Top" Width="111" Height="25">
                                <Label Content="wypożyczone"/>
                                <Label Content="zwrócone"/>
                            </ComboBox>
                        </Grid>
                        <TextBox x:Name="userRentCashier" HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" Text="Marta Kaplińska" VerticalAlignment="Top" Width="111" Margin="59.8,71,0,0" Grid.ColumnSpan="3" Grid.Column="2"/>
                        <ListView Grid.Column="2" HorizontalAlignment="Left" Height="123" Margin="59.8,231,0,-0.2" VerticalAlignment="Top" Width="408" Grid.ColumnSpan="3" >
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Nazwa" Width="100"  />
                                    <GridViewColumn Header="Cena/dzien" Width="100" />
                                    <GridViewColumn Header="Kategoria" Width="100"  />
                                    <GridViewColumn Header="Kaucja" Width="100"  />
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <Button x:Name="addGame" Content="Dodaj " HorizontalAlignment="Left" Margin="388.4,223,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.701,0.401" Grid.Column="4"/>
                        <Button x:Name="deleteGame" Content="Usuń " HorizontalAlignment="Left" Margin="388.4,247,0,0" VerticalAlignment="Top" Width="75" Grid.Column="4"/>
                        <Button x:Name="rentGam_button" Content="Wypożycz " Background="Green" Foreground="White" Grid.Column="4" HorizontalAlignment="Left" Margin="466.4,325,0,0" VerticalAlignment="Top" Width="75" />
