                            <Grid Margin="0,0,1.6,-0.2">
                                <TextBlock  Margin="1,0,33,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.155,-0.539"><Run Text="ID "/><Run Text="wypożenia "/></TextBlock>
                                <TextBlock Margin="1,25,-1,0" TextWrapping="Wrap" Text="Wybierz datę wypożyczenia" VerticalAlignment="Top"/>
                                <TextBlock Margin="0,46,0,0" TextWrapping="Wrap" Text="Wybierz datę zwrotu" VerticalAlignment="Top"/>
                                <TextBlock Margin="3,88,84,0" TextWrapping="Wrap" Text="Cena" VerticalAlignment="Top"/>
                                <TextBlock Margin="1,67,84,0" TextWrapping="Wrap" Text="Wybierz klienta" VerticalAlignment="Top"/>
                                <TextBlock Margin="0,156,88,0" TextWrapping="Wrap" Text="ID pracownika: " VerticalAlignment="Top"/>
                                <TextBlock Margin="1,177,18,0" TextWrapping="Wrap" Text="Wypożyczalnia" VerticalAlignment="Top"/>
                                <TextBlock Margin="0,130,34,0" TextWrapping="Wrap" Text="ID faktury" VerticalAlignment="Top" RenderTransformOrigin="-0.155,-0.539"/>
                                <TextBlock Margin="0,227,34,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.155,-0.539"><Run Text="Wpożyczone pozycje"/><Run Text=":"/></TextBlock>
                                <TextBlock Margin="1,109,86,0" TextWrapping="Wrap" Text="Rabat" VerticalAlignment="Top"/>
                            </Grid>
                            <TextBlock Margin="0,199,20.6,0" TextWrapping="Wrap" Text="Status" VerticalAlignment="Top"/>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Zwrot" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5" Margin="0,2,0.4,-2.2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="739*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.ColumnSpan="2" Margin="6,7,545.6,51.2">
                        <Grid Margin="0,0,1.6,-0.2">
                            <TextBlock  Margin="1,0,33,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.155,-0.539"><Run Text="Wybierz "/><Run Text="ID "/><Run Text="wypożenia "/></TextBlock>
                            <TextBlock Margin="1,44,-1,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="D"/><Run Text="at"/><Run Text="a "/><Run Text="wypożyczenia"/></TextBlock>
                            <TextBlock Margin="1,65,-1,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="D"/><Run Text="at"/><Run Text="a"/><Run Text=" zwrotu"/></TextBlock>
                            <TextBlock Margin="0,107,87,0" TextWrapping="Wrap" Text="Cena" VerticalAlignment="Top"/>
                            <TextBlock Margin="1,86,84,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="K"/><Run Text="lient"/></TextBlock>
                            <TextBlock Margin="-1,128,35,0" TextWrapping="Wrap" Text="ID faktury" VerticalAlignment="Top" RenderTransformOrigin="-0.155,-0.539"/>
                            <TextBlock Margin="1,149,33,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.155,-0.539"><Run Text="Kara za opó"/><Run Text="ź"/><Run Text="nienie"/></TextBlock>
                        </Grid>
                        <TextBlock Margin="0,22,21,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Zmień s"/><Run Text="t"/><Run Text="at"/><Run Text="us"/></TextBlock>
                    </Grid>
                    <Grid Margin="151.8,0,338.6,98.2" Grid.Column="1">
                        <TextBox x:Name="PriceCashier1" IsReadOnly="True" Background="#d3d3d3" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="21.11 zł" VerticalAlignment="Top" Width="111" Margin="0,113,0,0"/>
                        <TextBox x:Name="idFacture1"  IsReadOnly="True" Background="#d3d3d3" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="#112" VerticalAlignment="Top" Width="111"  Margin="0,136,0,0"/>
                        <TextBox x:Name="penaltyCashier1" Background="OrangeRed"  HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="5.00 zł" VerticalAlignment="Top" Width="111" Margin="0,159,0,0" />
                        <TextBox x:Name="idRentCashier1"   HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="#1100" VerticalAlignment="Top" Width="111" Margin="0,2,0,0" />
                        <ComboBox HorizontalAlignment="Left" Margin="0,25,0,0" VerticalAlignment="Top" Width="111" Height="25">
                            <Label Content="wypożyczone"/>
                            <Label Content="zwrócone"/>
                        </ComboBox>
                    </Grid>
                    <TextBox x:Name="userRentCashier1"  IsReadOnly="True"  Background="#d3d3d3" HorizontalAlignment="Left" Height="19" TextWrapping="Wrap" Text="Marta Kaplińska" VerticalAlignment="Top" Width="111" Margin="151.8,96,0,0" Grid.Column="1"/>
                    <TextBox x:Name="dataRentCashier1"  IsReadOnly="True" Background="#d3d3d3" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="#1100" VerticalAlignment="Top" Width="111" Margin="151.8,50,0,0" Grid.Column="1"/>
                    <TextBox x:Name="dataReturnCashier1"  IsReadOnly="True" Background="#d3d3d3" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="#1100" VerticalAlignment="Top" Width="111" Margin="151.8,73,0,0" Grid.Column="1"/>
                    <Button Content="Zwróć" Background="Green" Foreground="White" Grid.Column="1" HorizontalAlignment="Left" Margin="187.8,221,0,0" VerticalAlignment="Top" Width="75"/>


                </Grid>
            </TabItem>

            <TabItem Header="Dodaj użytkownika" Margin="-2,-2,-2,0">
                <Grid Background="#FFE5E5E5" Margin="0,2,0.4,-2.2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="41*"/>
                        <ColumnDefinition Width="561*"/>
                        <ColumnDefinition Width="159*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Margin="10,33,475.4,126.8" RenderTransformOrigin="0.815,0.45" Grid.ColumnSpan="2">
                        <TextBlock Margin="0,73,34,0" TextWrapping="Wrap" Text="Nume telefonu" VerticalAlignment="Top" RenderTransformOrigin="-0.155,-0.539"/>
                        <TextBlock Margin="1,25,-1,0" TextWrapping="Wrap" Text="Imię" VerticalAlignment="Top"/>
                        <TextBlock Margin="0,46,0,0" TextWrapping="Wrap" Text="Nazwisko" VerticalAlignment="Top"/>
                        <TextBlock Margin="1,94,86,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top"/>
                        <TextBlock Margin="0,120,85.8,0" TextWrapping="Wrap" Text="Hasło" VerticalAlignment="Top"/>
                        <TextBlock Margin="0,142,88,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top"/>
